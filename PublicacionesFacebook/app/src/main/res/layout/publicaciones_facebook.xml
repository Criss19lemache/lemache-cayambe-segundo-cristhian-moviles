<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="600dp">


    <Button
        android:id="@+id/button2"
        android:layout_width="122dp"
        android:layout_height="49dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="48dp"
        android:backgroundTint="@color/white"

        android:drawableLeft="@drawable/compartir2"
        android:text="Compartir"
        android:textAllCaps="false"
        android:textColor="#706D6D"
        android:textSize="12dp"
        app:iconPadding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="119dp"
        android:layout_height="49dp"
        android:layout_marginStart="120dp"
        android:layout_marginBottom="48dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/comentar2"

        android:text="Comentar"
        android:textAllCaps="false"
        android:textColor="#706D6D"
        android:textSize="12dp"
        app:iconPadding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imagePublicacion"
        android:layout_width="match_parent"
        android:layout_height="368dp"


        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtComentario"
        tools:srcCompat="@color/purple_200" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="50dp"
        android:layout_height="54dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/imagenperfil"
        app:civ_border_color="#CBCBCB"
        app:civ_border_width="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtNombrePerfil"
        android:layout_width="154dp"
        android:layout_height="28dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="14dp"
        android:text="Cristhian Lemache"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/profile_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtFechaPublicacion"
        android:layout_width="132dp"
        android:layout_height="18dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="-8dp"
        android:text="25 de junio de 2022 Â·"
        app:layout_constraintStart_toEndOf="@+id/profile_image"
        app:layout_constraintTop_toBottomOf="@+id/txtNombrePerfil" />

    <TextView
        android:id="@+id/txtInteracciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="8dp"
        android:text="752.125"
        app:layout_constraintEnd_toStartOf="@+id/txtComentarios"
        app:layout_constraintHorizontal_bias="0.181"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagePublicacion" />

    <TextView
        android:id="@+id/txtComentarios"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="4,453 comentarios"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagePublicacion" />


    <TextView
        android:id="@+id/txtComentario"
        android:layout_width="243dp"
        android:layout_height="22dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:text="Un razon mas para seguir"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtFechaPublicacion" />

    <ImageView
        android:id="@+id/iconWorld"
        android:layout_width="16dp"
        android:layout_height="15dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toEndOf="@+id/txtFechaPublicacion"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/iconworld"
        tools:srcCompat="@drawable/iconworld" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="58dp"
        android:layout_height="26dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/optionclose"
        tools:srcCompat="@drawable/optionclose" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="38dp"
        android:layout_height="19dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagePublicacion"
        app:srcCompat="@drawable/iconinteractions" />

    <Button
        android:id="@+id/button4"
        android:layout_width="120dp"
        android:layout_height="49dp"
        android:layout_marginBottom="48dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/like2"
        android:text="Me gusta"

        android:textAllCaps="false"
        android:textColor="#706D6D"
        android:textSize="12sp"
        app:iconPadding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="334dp"
        android:layout_height="1dp"
        android:layout_marginTop="36dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagePublicacion" />

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:layout_marginBottom="25dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>